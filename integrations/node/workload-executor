echo $1
echo $2
UTR_TRACE="true" AUTH="noauth" OUTPUT_DIRECTORY=$OUTPUT_DIRECTORY DRIVERS_ATLAS_TESTING_URI=$1 WORKLOAD_SPECIFICATION=$2 npm run check:drivers-atlas-testing
